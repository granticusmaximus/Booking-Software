@{
    ViewData["Title"] = "Roster Meeting Room";

    ViewBag.HelpTitle = ViewData["Title"];
    ViewBag.HelpMessage1 = "";
    ViewBag.HelpMessage2 = "Double click cell to add new booking.";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title text-primary"><i class="fa fa-calendar-o"></i> @ViewData["Title"]</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                            title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-lg-12">
                        <button class="btn pull-right" id="btnPrint" name="btnPrint"><i class="fa fa-print"></i> Print</button>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-lg-12">
                        <div id="Schedule1"></div>
                    </div>
                </div>

            </div>
            <!-- /.box-body -->
            <div class="box-footer">

            </div>
            <!-- /.box-footer-->
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
@section Styles{

}

@section Scripts{

    <script type="text/javascript">
    $(function () {

        $("#btnPrint").ejButton({
            click: "onClick"
        });


        var dataManager = ej.DataManager({
            url: "/api/BookMeetingRoom/Get",
            batchUrl: "/api/BookMeetingRoom/Crud",
            insertUrl: "/api/BookMeetingRoom/Add",
            updateUrl: "/api/BookMeetingRoom/Update",
            removeUrl: "/api/BookMeetingRoom/Remove",
            adaptor: new ej.UrlAdaptor(),
        });

        var dataManagerMeetingRoom = ej.DataManager({
            url: "/api/MeetingRoom",
            adaptor: new ej.WebApiAdaptor(),
        });

        $("#Schedule1").ejSchedule({
            width: "100%",
            views: ["Day", "WorkWeek", "Week", "Month", "Agenda"],
            currentView: "Month",
            agendaViewSettings: {
                daysInAgenda: 30
            },
            startHour: 6,
            endHour: 24,
            workHours: {
                highlight: true,
                start: 8,
                end: 22,
            },
            showTimeZoneFields: false,
            currentDate: "@DateTime.Now",
            showQuickWindow: false,
            allowInline: false,
            readOnly: true,
            allowDragAndDrop: true,
            enableAppointmentResize: true,
            showLocationField: true,
            prioritySettings: {
                enable: false,
            },
            contextMenuSettings: {
                enable: true,
            },
            appointmentSettings: {
                dataSource: dataManager,
                editFutureEventsOnly: false,
                id: "BookMeetingRoomId",
                subject: "Subject",
                startTime: "StartTime",
                endTime: "EndTime",
                description: "Description",
                allDay: "AllDay",
                recurrence: "Recurrence",
                recurrenceRule: "RecurrenceRule",
                resourceFields: "MeetingRoomId",
            },
            group: {
                resources: ["MeetingRoom"],
            },
            orientation: ej.Schedule.Orientation.Horizontal,
            resources: [
                {
                    field: "MeetingRoomId",
                    title: "Meeting Room",
                    name: "MeetingRoom",
                    resourceSettings: {
                        text: "MeetingRoomName",
                        id: "MeetingRoomId",
                        color: "Color",
                        dataSource: dataManagerMeetingRoom,
                    }
                }
            ],
        });


        });

        function onClick(args) {
            var obj = $("#Schedule1").data("ejSchedule");
            obj.print();
        }

    </script>
}
